<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg_color"
    android:padding="10dp"
    tools:ignore="HardcodedText" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/b_calcel_order" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/black" >

                <Button
                    android:id="@+id/b_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Edit"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_golden_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:text="+"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/text_golden_color"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_edit"
                android:layout_marginLeft="15dp"
                android:text="Store Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_store_name"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:text="Order Summary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
            
            <View
                android:id="@+id/v0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/tv_summary"
                android:background="@color/white" />

            <com.techfiesta.asaan.utility.NestedListView
                android:id="@+id/lv_item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/v0"
                android:divider="@color/white"
                android:dividerHeight="1dp" />

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/lv_item_list"
                android:background="@color/white" />
         <RelativeLayout
                android:id="@+id/rl_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/tv_discount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount(Not specified)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dicount_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=">"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>
             <View
                android:id="@+id/v1_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/rl_discount"
                android:background="@color/white" />
            <RelativeLayout
                android:id="@+id/rl_subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1_1"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/tv_subtotal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_subtotal_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$20.85"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/rl_subtotal"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_gratuity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/tv_gratuity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gratuity(15%)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gratuity_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$3.12"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/rl_gratuity"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v3"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/tv_tax_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_tax_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$0.00"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/v4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/rl_tax"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v4"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/tv_total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$23.97"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/v5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/rl_total"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v5"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/tv_due_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount Due"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_due_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$23.97"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/v6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/rl_due"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_delivery_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v6"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/tv_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Est. Delivery Time 01.40 pm"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>
             <View
                android:id="@+id/v7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/rl_delivery_time"
                android:background="@color/white" />

             <RelativeLayout
                android:id="@+id/rl_payment_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v7"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/tv_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Mode"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=">"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>
             <View
                android:id="@+id/v8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/rl_payment_mode"
                android:background="@color/white" />

             <RelativeLayout
                android:id="@+id/rl_sp_instr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v8"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/tv_special_instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Instructions"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=">"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>
             <View
                android:id="@+id/v9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/rl_edit"
                android:layout_below="@+id/rl_sp_instr"
                android:background="@color/white" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/b_calcel_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:text="Cancel Order"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_golden_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b_place_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:text="Place Order"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_golden_color"
        android:textStyle="bold" />

</RelativeLayout>