<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_golden_color"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_login_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:text="Welcome Back! Let&apos;s get started."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_golden_color" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_login_title"
            android:layout_marginTop="10dp"
            android:paddingRight="40dp"
            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_email"
            android:layout_toRightOf="@+id/tv_email"
            android:hint="name@example.com"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_email"
            android:layout_below="@+id/tv_email"
            android:layout_marginTop="15dp"
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_password"
            android:layout_alignLeft="@+id/et_email"
            android:layout_alignStart="@+id/et_email"
            android:hint="Min 8 Characters"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/b_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_password"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/login_bg_color"
            android:gravity="center"
            android:onClick="onClickLogin"
            android:padding="10dp"
            android:text="Login"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_forget_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="Forgotten your password?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blueberry_blue" />
    </RelativeLayout>

</RelativeLayout>