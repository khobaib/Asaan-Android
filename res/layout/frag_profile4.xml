<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/app_bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/imgViewProfPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:contentDescription="Profile Picture"
            android:scaleType="fitCenter"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tvSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="Save"
            android:textColor="@color/khaki_text"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/viewBar1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imgViewProfPic"
            android:layout_marginTop="20dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/linLay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewBar1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtViewLblFirstName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="First Name"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etViewFirstName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="First Name"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/viewBar2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linLay1"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/linLay2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/viewBar2"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/txtViewLblLastName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="Last Name"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etViewLastName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="Last Name"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/viewBar3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linLay2"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/linLay3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/viewBar3"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/txtViewLblEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="Email"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etViewEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="Email"
                android:inputType="textWebEmailAddress"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/viewBar4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linLay3"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/linLay4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/viewBar4"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/txtViewLblPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="Phone"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etViewPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="Phone"
                android:inputType="phone"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/viewBar5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linLay4"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/linLay5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/viewBar5"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/txtViewLblTip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="Tip"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etViewTip"
                 android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="Tip"
                android:inputType="number"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/viewBar6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linLay5"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/linLay6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/viewBar6"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/txtViewLblPayInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="Payment Info"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtViewPayInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="Payment Info"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/viewBar7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linLay6"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/linLay7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/viewBar7"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/txtViewLblFbProf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="Facebook Profile"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etViewFbProf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="Facebook Profile"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/viewBar8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linLay7"
            android:background="@color/white" />
    </RelativeLayout>

</ScrollView>
