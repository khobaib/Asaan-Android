<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_store_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/loading_wait" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_grey_background_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp" >

            <TextView
                android:id="@+id/tv_store_title"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/resturant_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_golden_color" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_store_title"
                android:layout_toRightOf="@+id/tv_store_title"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cuisine_title"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_store_title"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/cuisine_type_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_golden_color" />

            <TextView
                android:id="@+id/tv_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_cuisine_title"
                android:layout_toRightOf="@+id/tv_cuisine_title"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_chef_title"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_cuisine_title"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/executive_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_golden_color" />

            <TextView
                android:id="@+id/tv_chef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_chef_title"
                android:layout_toRightOf="@+id/tv_chef_title"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_trophies_title"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_chef_title"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/trophies_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_golden_color" />

            <TextView
                android:id="@+id/tv_trophies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_trophies_title"
                android:layout_toRightOf="@+id/tv_trophies_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/text_grey_background_color" />

        <RelativeLayout
            android:id="@+id/rl_view_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp" >

            <TextView
                android:id="@+id/tv_view_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="View Map With Store Location"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b_next"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/transparent"
                android:text="@string/order_quantity_plus"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_grey_background_color" />

        <TextView
            android:id="@+id/tv_store_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Chicagos best chinese resturant"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_grey_background_color" />

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp" >

            <TextView
                android:id="@+id/tv_address_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/address"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_golden_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_address_title"
                android:layout_toRightOf="@+id/tv_address_title"
                 android:layout_toEndOf="@+id/tv_address_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_address_title"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/phone"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_golden_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_phone_title"
                android:layout_toRightOf="@+id/tv_phone_title"
                android:layout_toEndOf="@+id/tv_phone_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_web_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_phone_title"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/web"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_golden_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_web_title"
                android:layout_toRightOf="@+id/tv_web_title"
                android:layout_toEndOf="@+id/tv_web_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl_info_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_web_title"
                android:layout_marginTop="@dimen/margin_10dp" >

                <TextView
                    android:id="@+id/tv_fb_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="@string/facebook"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_golden_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_fb_title"
                    android:layout_toEndOf="@+id/tv_fb_title"
                    android:gravity="center_horizontal|left"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_twitter_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl_info_fb"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/twitter"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_golden_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_twitter_title"
                android:layout_toRightOf="@+id/tv_twitter_title"
                android:layout_toEndOf="@+id/tv_twitter_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>