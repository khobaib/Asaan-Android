<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText" >

    <ImageView
        android:id="@+id/ivLogoRestaurantItem"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_history_item_restaurant"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/llNameHolderRestaurantItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignBottom="@+id/ivLogoRestaurantItem"
        android:layout_alignTop="@+id/ivLogoRestaurantItem"
        android:layout_toRightOf="@+id/ivLogoRestaurantItem"
        android:background="@color/black" >

        <TextView
            android:id="@+id/tvNameRestaurantItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvDistanceRestaurantItem"
            android:text="Epic Restaurant"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTypeRestaurantItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvNameRestaurantItem"
            android:layout_below="@+id/tvNameRestaurantItem"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="American Cuisine"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDistanceRestaurantItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvNameRestaurantItem"
            android:paddingLeft="5dp"
            android:text="> 1 mile"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>