<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtViewResName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Restaurant Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtViewLblOrdHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtViewResName"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="Order History"
        android:textSize="16sp" />

    <View
        android:id="@+id/viewBar1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txtViewLblOrdHistory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <ListView
        android:id="@+id/lstViewOrders"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/viewBar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >
    </ListView>

</RelativeLayout>
