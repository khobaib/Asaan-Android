<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="How was the food?"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivDislikeFood"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvFood"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/dislike" />

    <SeekBar
        android:id="@+id/sbFood"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFood"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:progress="50"
        android:layout_toRightOf="@+id/ivDislikeFood" />

    <ImageView
        android:id="@+id/ivLikeFood"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvFood"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/sbFood"
        android:src="@drawable/like_1" />

</RelativeLayout>