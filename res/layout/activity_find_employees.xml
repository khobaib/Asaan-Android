<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">
    <TextView 
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select Employee by phone"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    
 <TextView 
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Make Sure Employee Has Joined Savoir First."
        android:layout_below="@+id/tv_1"
        android:layout_marginTop="20dp"/>
 <View 
     android:id="@+id/v_1"
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:layout_below="@+id/tv_2"
     android:background="@color/white"
     android:layout_marginBottom="20dp"
     android:layout_marginTop="10dp"/>
 <TextView 
     android:id="@+id/tv_phone"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_marginLeft="10dp"
     android:layout_below="@+id/v_1"
     android:text="phone"/>
 <EditText 
     android:id="@+id/et_phone"
     android:layout_width="150dp"
     android:layout_height="30dp"
     android:background="@color/white"
     android:layout_toRightOf="@+id/tv_phone"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="10dp"
     android:inputType="phone"
     android:textColor="@color/black"
     android:text="+1"
     android:layout_alignBaseline="@+id/tv_phone"/>
  <TextView 
     android:id="@+id/tv_search"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignBaseline="@+id/tv_phone"
      android:layout_toRightOf="@+id/et_phone"
     android:layout_marginLeft="10dp"
     android:layout_below="@+id/v_1"
     android:textColor="@color/khaki_text"
     android:text="search"/>
  <TextView 
      android:id="@+id/tv_add_emp_to_chat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/khaki_text"
      android:layout_marginTop="40dp"
      android:layout_below="@+id/tv_phone"
      android:layout_centerHorizontal="true"
      android:text="Add Employee To Chat Room"/>
</RelativeLayout>
