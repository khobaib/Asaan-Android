<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/app_bg">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Status:Waiting..."
        android:layout_alignParentTop="true"
        android:textSize="18dp"
        android:textStyle="bold" />
    <View 
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/tv_status"
        android:layout_marginLeft="15dp"/>
    
    <TextView
        android:id="@+id/tv_party_ahead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Parties Ahead of You:"
        android:layout_below="@+id/v1"
        android:textSize="15dp" />
    <View 
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/tv_party_ahead"
        android:layout_marginLeft="15dp"/>
    
    <TextView
        android:id="@+id/tv_est_wait_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Estimated Wait Time:"
        android:layout_below="@+id/v2"
        android:textSize="15dp" />
    <View 
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/tv_est_wait_time"
        android:layout_marginLeft="15dp"/>
     <TextView
        android:id="@+id/tv_status_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="close to seating time,please check-in with the host\n to be seated soon."
        android:layout_below="@+id/v3"
        android:textSize="10dp" />
    <View 
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/tv_status_2"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/tv_leave_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Leave the Line?"
        android:layout_centerInParent="true"
        android:layout_below="@+id/v4"
        android:textSize="15dp"
        android:textColor="@color/khaki_text"
        android:textStyle="bold" />
    <View 
        android:id="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/tv_leave_line"
        android:layout_marginLeft="15dp"/>

</RelativeLayout>
