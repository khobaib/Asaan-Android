<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color" >

    <Button
        android:id="@+id/b_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:text="Save"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_golden_color"
        android:textStyle="bold" />
 
    <Button
        android:id="@+id/b_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:text="Skip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_golden_color"
        android:textStyle="bold" />
    <RelativeLayout
        android:id="@+id/rl_profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="@string/profile_page_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_golden_color" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_total_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_profile_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_propic_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/profile_pic_add" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/tv_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="First Name"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_first_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_first_name"
                android:hint="John"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_first_name"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Last Name"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_last_name"
                android:layout_alignLeft="@+id/et_first_name"
                android:layout_toRightOf="@+id/tv_last_name"
                android:hint="Smith"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_last_name"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Phone"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_phone"
                android:layout_alignLeft="@+id/et_first_name"
                android:layout_toRightOf="@+id/tv_phone"
                android:hint="+1"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>