<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextView
        android:id="@+id/txtViewLblSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Wait-list Summary"
        android:textSize="18sp"
        android:textStyle="bold" />

	<LinearLayout
	    android:id="@+id/linLay1"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_below="@+id/txtViewLblSummary"
	    android:layout_centerHorizontal="true" >

		<TextView
		    android:id="@+id/txtViewLblPSize"
		    android:layout_width="100dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="2"
		    android:gravity="center"
		    android:text="Party size" />

		<TextView
		    android:id="@+id/txtViewLblPSize1"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:background="#558a03"
		    android:gravity="center"
		    android:text="1 - 2" />

		<TextView
		    android:id="@+id/txtViewLblPSize2"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:background="#558a03"
		    android:gravity="center"
		    android:text="3 - 4" />

		<TextView
		    android:id="@+id/txtViewLblPSize3"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:background="#558a03"
		    android:gravity="center"
		    android:text="5+" />

	</LinearLayout>
	
	<View
        android:id="@+id/viewBar2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linLay1"
        android:layout_marginLeft="20dp"
        android:background="@color/white" />
	
	<LinearLayout
	    android:id="@+id/linLay2"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_below="@+id/viewBar2"
	    android:layout_centerHorizontal="true" >

		<TextView
		    android:id="@+id/txtViewLblPAhead"
		    android:layout_width="100dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="2"
		    android:gravity="center"
		    android:text="Parties ahead\n of you" />

		<TextView
		    android:id="@+id/txtViewPAheadSize1"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="0" />

		<TextView
		    android:id="@+id/txtViewPAheadSize2"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="0" />

		<TextView
		    android:id="@+id/txtViewPAheadSize3"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="0" />

	</LinearLayout>
	
	<View
        android:id="@+id/viewBar3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linLay2"
       android:layout_marginLeft="20dp"
        android:background="@color/white" />
	
	<LinearLayout
	    android:id="@+id/linLay3"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_below="@+id/viewBar3"
	    android:layout_centerHorizontal="true" >

		<TextView
		    android:id="@+id/txtViewLblWtTime"
		    android:layout_width="100dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="2"
		    android:gravity="center"
		    android:text="Est. wait time" />

		<TextView
		    android:id="@+id/txtViewWtTimePSize1"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="15" />

		<TextView
		    android:id="@+id/txtViewWtTimePSize2"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="15" />

		<TextView
		    android:id="@+id/txtViewWtTimePSize3"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="15" />

	</LinearLayout>
	

	
	<TextView
	    android:id="@+id/txtViewLblJoin"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/linLay3"
	    android:layout_marginLeft="5dp"
	    android:layout_marginStart="5dp"
	    android:layout_marginTop="15dp"
	    android:text="Join The Wait-list"
	    android:textSize="18sp"
	    android:textStyle="bold" />
	

	
	<RelativeLayout
	    android:id="@+id/relLay1"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_below="@+id/txtViewLblJoin"
	    android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/btnDecPeople"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/decrement" />

        <Button
            android:id="@+id/btnIncPeople"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/increment" />

        <TextView
            android:id="@+id/txtViewPeople"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/txtViewLblPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewPeople"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/btnDecPeople"
            android:layout_toLeftOf="@id/btnIncPeople"
            android:layout_toRightOf="@id/btnDecPeople"
            android:layout_toStartOf="@id/btnIncPeople"
            android:gravity="center"
            android:text="People"
            android:textSize="12sp" />

    </RelativeLayout>
    
    <View
        android:id="@+id/viewBar6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relLay1"
       android:layout_marginLeft="20dp"
        android:background="@color/white" />
    
    <RelativeLayout
        android:id="@+id/relLay2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/viewBar6"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/btnGetInLine"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:text="Get In Line"
            android:textColor="@color/khaki"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
    
    <View
        android:id="@+id/viewBar7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relLay2"
        android:layout_marginLeft="20dp"
        android:background="@color/white" />
    
</RelativeLayout>
